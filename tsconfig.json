{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,

    "outDir": "dist"
  },
  "include": ["src/**/*"]
  // "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
