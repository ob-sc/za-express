{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "outDir": "dist",
    "typeRoots": ["./za-types/server"],
