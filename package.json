{
  "name": "za-express",
  "version": "1.2.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prestart": "yarn sync && yarn install",
    "start": "pm2 start ecosystem.config.js --env production",
    "reload": "pm2 reload http-api",
    "restart": "pm2 delete http-api && yarn start && pm2 update",
    "prewatch": "yarn sync",
    "watch": "nodemon -r dotenv/config src/index.ts",
    "compiled": "NODE_ENV=development node -r dotenv/config dist/index.js",
    "prettier": "prettier --write src",
    "prelint": "tsc --noemit",
    "lint": "eslint . --ext .ts,.tsx",
    "subinit": "git submodule init && git submodule update --remote --merge",
    "sync": "git pull && git submodule update --remote --merge",
    "clean": "rm -rf dist",
    "prebuild": "yarn install",
    "build": "yarn clean && tsc",
    "preversion": "yarn sync && yarn prettier && npm run lint",
    "version": "yarn build && git add -A",
    "postversion": "git push && git push --tags",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "dcup": "docker-compose up -d",
    "dcdown": "docker-compose down",
    "test": "echo test",
    "posttest": "echo test2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.16.1",
    "express-mysql-session": "^2.1.5",
    "express-session": "^1.17.1",
    "joi": "^17.4.0",
    "morgan": "^1.9.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.6.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.12",
    "@types/express-mysql-session": "^2.1.2",
    "@types/express-session": "^1.17.3",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.18",
    "@types/node": "^15.12.1",
    "@types/nodemailer": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-scza": "^1.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prettier-config-scza": "^1.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "node_modules/*",
      "dist/*"
    ],
    "ext": "ts",
    "verbose": true
  },
  "prettier": "prettier-config-scza"
}
