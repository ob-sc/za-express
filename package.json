{
  "name": "za-express",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.4.0"
  },
  "scripts": {
    "start": "yarn prod",
    "watch": "nodemon index.ts",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "prebuild": "git pull && yarn lint",
    "build": "yarn clean && tsc",
    "reload": "pm2 reload http-api",
    "prod": "pm2 start ecosystem.config.js --env production",
    "dcup": "docker-compose up -d",
    "dcdown": "docker-compose down"
  },
  "dependencies": {
    "@types/express-session": "^1.17.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^2.6.9",
    "dotenv": "^9.0.0",
    "express": "^4.16.1",
    "express-mysql-session": "^2.1.5",
    "express-session": "^1.17.1",
    "joi": "^17.4.0",
    "morgan": "^1.9.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.12",
    "@types/express-mysql-session": "^2.1.2",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.18",
    "@types/node": "^15.12.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "node_modules/*",
      "dist/*"
    ],
    "ext": "ts",
    "verbose": true
  }
}
